<%= form_with url: [:search, :streets], method: :get, class: 'search-form', data: {remote: false} do |f| %>
  <%= f.label :q, raw('Start typing the name of the street&hellip;') %>
  <%= f.text_field :q, value: @query, placeholder: raw('Start typing the name of the street&hellip;') %>
  <%= f.submit 'Search' %>
<%- end %>

<ol class="search-results">
  <%- @streets.each do |street| %>
    <li>
      <%= link_to street, class: 'search-result' do -%>
        <h3><%= street.name -%></h3>
        <p>Dublin <%= street.postcode -%></p>
      <%- end -%>
    </li>
  <%- end %>
</ol>